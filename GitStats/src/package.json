{
  "name": "gitstats",
  "productName": "GitStats",
  "description": "A Lightweight ElectronJS app to get statistics about a repository.",
  "keywords": [],
  "main": "./dist/app.js",
  "version": "2.0.3",
  "author": "megamaz",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": ".\\node_modules\\.bin\\tsc",
    "copy-files": "copyfiles *.html *.css userdata.json userdata.schema.json ./assets/* ./dist",
    "clean": "rimraf ./dist/",
    "full-build": "npm run clean && npm run build && npm run copy-files"
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.10",
    "ajv": "^8.12.0",
    "chart.js": "^4.4.0",
    "electron": "23.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "octokit": "^3.1.1",
    "sqlite3": "^5.1.6",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.8.8",
    "ajv": "^8.12.0",
    "copyfiles": "^2.4.1",
    "electron": "23.1.1",
    "octokit": "^3.1.1",
    "rimraf": "^5.0.5",
    "sqlite3": "^5.1.6",
    "typescript": "^5.2.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "userdata.json", "./*.db"
        ]
      }
    }
  }
}